{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸ¦€Rust: Build, run and delete artifact for current file",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "del",
                "${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":[
                "ðŸ¦€Rust: Build and run current file",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            }
        },
        {
            "label": "ðŸ¦€Rust: Build current file",
            "type": "shell",
            "command": "rustc",
            "args": [
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "--crate-name",
                "crate_name_${lineNumber}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "hide": true 
        },
        {
            "label": "ðŸ¦€Rust: Build and run current file",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "dependsOn":[
                "ðŸ¦€Rust: Build current file"
            ],
            "hide": true 
        }
    ]
}
